package cata_frutas.Elementos.Elementos_Estáticos;

import cata_frutas.Elementos.Ponto;
import cata_frutas.Elementos.Elementos_Dinâmicos.Fruta;

public class Arvore extends Elemento_Estatico{
	Fruta tipofruta;
	int ultimaFruta;
	
	public Arvore(int x, int y) {
		super(x,y);
		this.ultimaFruta = 0;
	}
	
	public Fruta getFruta() {
		return this.tipofruta;
	}
	
	public Ponto soltaFruta() {
		int x = (int) Math.round(Math.random());
		int y = (int) Math.round(Math.random());
		
		return new Ponto(x,y);
	}
}
