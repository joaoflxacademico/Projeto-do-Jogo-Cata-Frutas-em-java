	    repaint();
	}
	
	public ImageIcon criandoImagem(int tamanho, String Caminho) {
		ImageIcon img = new ImageIcon(Caminho);
	    Image img1 = img.getImage().getScaledInstance(tamanho, tamanho, Image.SCALE_SMOOTH);
	    img = new ImageIcon(img1);
	    return img;
	}

